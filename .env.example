# Base de datos PostgreSQL
POSTGRES_DB=drtc_nomina
POSTGRES_USER=drtc_user
POSTGRES_PASSWORD=change_this_secure_password_in_production

# Backend FastAPI
SECRET_KEY=change_this_to_a_random_secret_key_min_32_characters_long
ENVIRONMENT=development
DATABASE_URL=postgresql+asyncpg://drtc_user:change_this_secure_password_in_production@postgres:5432/drtc_nomina
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# Security
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:4321,http://localhost

# Frontend
PUBLIC_API_URL=http://localhost/api

# Integraciones externas
MTC_API_URL=https://api.mtc.gob.pe
MTC_API_KEY=your_mtc_api_key_here
SUNARP_API_URL=https://api.sunarp.gob.pe
SUNARP_API_KEY=your_sunarp_api_key_here

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notificaciones@drtc-puno.gob.pe
SMTP_PASSWORD=your_email_password_here
SMTP_FROM=notificaciones@drtc-puno.gob.pe
SMTP_TLS=true

# Configuraci√≥n de archivos
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5
API_EXTERNAL_RATE_LIMIT_PER_MINUTE=100
