---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout title="Nuevo Conductor - DRTC Puno">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Registrar Nuevo Conductor</h1>
            <p class="text-sm text-gray-600">Complete el formulario con los datos del conductor</p>
          </div>
          <a href="/conductores" class="text-sm text-blue-600 hover:text-blue-700">
            ← Volver a Conductores
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Mensajes -->
      <div id="successMessage" class="hidden bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6">
        <p class="font-medium">¡Conductor registrado exitosamente!</p>
        <p class="text-sm">Redirigiendo a la lista de conductores...</p>
      </div>

      <div id="errorMessage" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
      </div>

      <!-- Formulario -->
      <form id="conductorForm" class="bg-white rounded-lg shadow">
        <!-- Datos Personales -->
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Datos Personales</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- DNI -->
            <div>
              <label for="dni" class="block text-sm font-medium text-gray-700 mb-2">
                DNI <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="dni"
                name="dni"
                required
                maxlength="8"
                pattern="[0-9]{8}"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="12345678"
              />
              <p class="text-xs text-gray-500 mt-1">8 dígitos numéricos</p>
            </div>

            <!-- Nombres -->
            <div>
              <label for="nombres" class="block text-sm font-medium text-gray-700 mb-2">
                Nombres <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="nombres"
                name="nombres"
                required
                maxlength="100"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Juan Carlos"
              />
            </div>

            <!-- Apellidos -->
            <div>
              <label for="apellidos" class="block text-sm font-medium text-gray-700 mb-2">
                Apellidos <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="apellidos"
                name="apellidos"
                required
                maxlength="100"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Mamani Quispe"
              />
            </div>

            <!-- Fecha de Nacimiento -->
            <div>
              <label for="fecha_nacimiento" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de Nacimiento <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="fecha_nacimiento"
                name="fecha_nacimiento"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                maxlength="255"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="conductor@email.com"
              />
            </div>

            <!-- Teléfono -->
            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono <span class="text-red-500">*</span>
              </label>
              <input
                type="tel"
                id="telefono"
                name="telefono"
                required
                maxlength="20"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="951234567"
              />
            </div>

            <!-- Dirección -->
            <div class="md:col-span-2">
              <label for="direccion" class="block text-sm font-medium text-gray-700 mb-2">
                Dirección <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="direccion"
                name="direccion"
                required
                maxlength="500"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Jr. Lima 456, Puno"
              />
            </div>
          </div>
        </div>

        <!-- Datos de Licencia -->
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Licencia de Conducir</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Número de Licencia -->
            <div>
              <label for="licencia_numero" class="block text-sm font-medium text-gray-700 mb-2">
                Número de Licencia <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="licencia_numero"
                name="licencia_numero"
                required
                maxlength="20"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Q12345678"
              />
            </div>

            <!-- Categoría -->
            <div>
              <label for="licencia_categoria" class="block text-sm font-medium text-gray-700 mb-2">
                Categoría <span class="text-red-500">*</span>
              </label>
              <select
                id="licencia_categoria"
                name="licencia_categoria"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Seleccione...</option>
                <option value="A-I">A-I - Motocicletas</option>
                <option value="A-IIa">A-IIa - Automóviles</option>
                <option value="A-IIb">A-IIb - Taxis y remolques</option>
                <option value="A-IIIa">A-IIIa - Camionetas y microbuses</option>
                <option value="A-IIIb">A-IIIb - Ómnibus</option>
                <option value="A-IIIc">A-IIIc - Vehículos pesados</option>
              </select>
            </div>

            <!-- Fecha de Emisión -->
            <div>
              <label for="licencia_emision" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de Emisión <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="licencia_emision"
                name="licencia_emision"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <!-- Fecha de Vencimiento -->
            <div>
              <label for="licencia_vencimiento" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de Vencimiento <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="licencia_vencimiento"
                name="licencia_vencimiento"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>
        </div>

        <!-- Certificado Médico -->
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Certificado Médico (Opcional)</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Número de Certificado -->
            <div>
              <label for="certificado_medico_numero" class="block text-sm font-medium text-gray-700 mb-2">
                Número de Certificado
              </label>
              <input
                type="text"
                id="certificado_medico_numero"
                name="certificado_medico_numero"
                maxlength="50"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="CM-2024-001"
              />
            </div>

            <!-- Fecha de Vencimiento -->
            <div>
              <label for="certificado_medico_vencimiento" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de Vencimiento
              </label>
              <input
                type="date"
                id="certificado_medico_vencimiento"
                name="certificado_medico_vencimiento"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>
        </div>

        <!-- Empresa -->
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Empresa</h2>
          <div>
            <label for="empresa_id" class="block text-sm font-medium text-gray-700 mb-2">
              Empresa <span class="text-red-500">*</span>
            </label>
            <select
              id="empresa_id"
              name="empresa_id"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Cargando empresas...</option>
            </select>
          </div>
        </div>

        <!-- Botones -->
        <div class="p-6 bg-gray-50 flex justify-end gap-4">
          <a
            href="/conductores"
            class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors"
          >
            Cancelar
          </a>
          <button
            type="submit"
            id="submitButton"
            class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Registrar Conductor
          </button>
        </div>
      </form>
    </main>
  </div>
</MainLayout>

<script>
  import { conductoresService, type ConductorCreate } from '../../services/conductores';
  import { empresasService } from '../../services/empresas';

  // Verificar autenticación
  const token = localStorage.getItem('access_token');
  if (!token) {
    window.location.href = '/login';
  }

  const form = document.getElementById('conductorForm') as HTMLFormElement;
  const submitButton = document.getElementById('submitButton') as HTMLButtonElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;
  const successMessage = document.getElementById('successMessage') as HTMLDivElement;
  const empresaSelect = document.getElementById('empresa_id') as HTMLSelectElement;

  // Cargar empresas
  async function loadEmpresas() {
    try {
      const response = await empresasService.getAll({ activo: true, size: 100 });
      
      empresaSelect.innerHTML = '<option value="">Seleccione una empresa...</option>';
      
      response.items.forEach(empresa => {
        const option = document.createElement('option');
        option.value = empresa.id;
        option.textContent = `${empresa.razon_social} (${empresa.ruc})`;
        empresaSelect.appendChild(option);
      });
    } catch (error) {
      console.error('Error loading empresas:', error);
      empresaSelect.innerHTML = '<option value="">Error al cargar empresas</option>';
    }
  }

  // Manejar envío del formulario
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Deshabilitar botón
    submitButton.disabled = true;
    submitButton.textContent = 'Registrando...';
    errorMessage.classList.add('hidden');
    successMessage.classList.add('hidden');

    try {
      // Obtener datos del formulario
      const formData = new FormData(form);
      
      const conductorData: ConductorCreate = {
        dni: formData.get('dni') as string,
        nombres: formData.get('nombres') as string,
        apellidos: formData.get('apellidos') as string,
        fecha_nacimiento: formData.get('fecha_nacimiento') as string,
        direccion: formData.get('direccion') as string,
        telefono: formData.get('telefono') as string,
        email: formData.get('email') as string,
        licencia_numero: formData.get('licencia_numero') as string,
        licencia_categoria: formData.get('licencia_categoria') as string,
        licencia_emision: formData.get('licencia_emision') as string,
        licencia_vencimiento: formData.get('licencia_vencimiento') as string,
        empresa_id: formData.get('empresa_id') as string,
      };

      // Agregar certificado médico si está presente
      const certNumero = formData.get('certificado_medico_numero') as string;
      const certVencimiento = formData.get('certificado_medico_vencimiento') as string;
      
      if (certNumero) {
        conductorData.certificado_medico_numero = certNumero;
      }
      if (certVencimiento) {
        conductorData.certificado_medico_vencimiento = certVencimiento;
      }

      // Enviar al API
      await conductoresService.create(conductorData);

      // Mostrar mensaje de éxito
      successMessage.classList.remove('hidden');
      
      // Redirigir después de 2 segundos
      setTimeout(() => {
        window.location.href = '/conductores';
      }, 2000);

    } catch (error: any) {
      console.error('Error creating conductor:', error);
      errorMessage.textContent = error.message || 'Error al registrar el conductor. Por favor, verifica los datos e intenta de nuevo.';
      errorMessage.classList.remove('hidden');
      submitButton.disabled = false;
      submitButton.textContent = 'Registrar Conductor';
    }
  });

  // Cargar empresas al iniciar
  loadEmpresas();
</script>
